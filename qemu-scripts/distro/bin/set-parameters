#!/bin/bash

# NOTE: set -o pipefail is needed to ensure that any error or failure causes the whole pipeline to fail.
# Without this specification, the CI status will provide a false sense of security by showing builds
# as succeeding in spite of errors or failures.
set -eo pipefail

ABBREV=${PWD##*/}

IMAGE_FILE="image/$ABBREV.qcow2"

ISO_FILE="iso/$ABBREV.iso"
ISO_URL_1_FILENAME='parameters/iso_url_1.txt'
ISO_URL_2_FILENAME='parameters/iso_url_2.txt'
ISO_URL_FULL_FILENAME='parameters/iso_url_full.txt'
CHECKSUM_METHOD_FILE='parameters/checksum_method.txt'
CHECKSUM_VALUE_FILE='parameters/checksum_value.txt'

NUM_CORES_FILE='parameters/num_cores.txt'
AMT_MEMORY_FILE='parameters/amt_memory.txt'

